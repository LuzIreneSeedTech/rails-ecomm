<div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
  <div class="py-2 inline-block min-w-full">
    <div class="overflow-x-auto">
      <table class="min-w-full overflow-x-scroll">
        <thead class="bg-white border-b">
          <tr>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Home
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Description
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Price
            </th>
          </tr>
        </thead>
        <tbody>
          <% @admin_products.each do |p| %>
            <tr class="bg-gray-50 border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= p.images.any? ? image_tag(p.images.first.variant(:thumb)) : image_tag("https://dummyimage.com/50x50/fff/aaa") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                <%= link_to p.name, edit_admin_product_path(p) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= p.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                $<%= (p.price/100.0).to_s %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%== pagy_nav(@admin_products_pagy) if @admin_products_pagy.pages > 1 %>
    </div>
  </div>
</div>
